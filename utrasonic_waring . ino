// Pin setup
const int trigPin = 7;     // HC-SR04 Trig
const int echoPin = 6;     // HC-SR04 Echo
const int ledPin = 9;      // LED
const int buzzerPin = 8;   // Buzzer

long duration;
int distance;

void setup() {
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(ledPin, OUTPUT);
  pinMode(buzzerPin, OUTPUT);
  Serial.begin(9600); // Start Serial Monitor
}

void loop() {
  // --- Ultrasonic sensor pulse ---
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  // --- Read echo ---
  duration = pulseIn(echoPin, HIGH, 30000); // 30 ms timeout
  if (duration == 0) {
    distance = 999; // No echo detected
  } else {
    distance = duration * 0.034 / 2; // Convert to cm
  }

  // --- Print distance every 1 second ---
  Serial.print("Distance: ");
  Serial.print(distance);
  Serial.println(" cm");

  // --- Behavior rules ---
  if (distance < 10) {
    digitalWrite(ledPin, HIGH);   // LED ON
  } else {
    digitalWrite(ledPin, LOW);    // LED OFF
  }

  if (distance < 5) {
    digitalWrite(buzzerPin, HIGH); // Buzzer ON (active buzzer)
    // For passive buzzer: tone(buzzerPin, 2000);
  } else {
    digitalWrite(buzzerPin, LOW);  // Buzzer OFF
    // For passive buzzer: noTone(buzzerPin);
  }

  delay(1000); // Wait 1 second before next reading
}
